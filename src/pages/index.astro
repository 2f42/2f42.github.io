---
import Base from "../layouts/Base.astro"

let title = "home";
---

<Base title={title}>
	<div class="welcome">
		<h1>welcome to my&nbsp;realm</h1>
		<p>I'm Nathan&nbsp;Patel, a <s>skilled&nbsp;gremlin</s> Computer&nbsp;Science&nbsp;undergrad</p>
	</div>

	<div class="buttons">
		<a href="/about">
			<h2>learn about me &#126;&gt;</h2>
		</a>
		<a href="/contact">
			<h2>get in touch &#126;&gt;</h2>
		</a>
	</div>
</Base>

<script defer>
	const triggerShadow = 3 * parseFloat(getComputedStyle(document.documentElement).fontSize);

	window.addEventListener("scroll", () => {
		if (window.scrollY > triggerShadow) {
			navHeader.style.boxShadow = "0 0 0.3rem black";
		} else {
			navHeader.style.boxShadow = "none";
		}
	});
</script>

<style>
	body {
		background-image: linear-gradient(90deg, #093028, #237A57);
		min-height: 100%;
		background-attachment: fixed;
		color: #eee;
	}

	.welcome {
		mix-blend-mode: hard-light;
		padding: 2rem;
		margin: 4rem auto 0;
		text-align: center;
		text-shadow: 0 0.15rem 0.2rem #444;
		max-width: 50rem;
	}

	.welcome h1 {
		margin-top: 0;
		font-size: 4rem;
	}

	.welcome p {
		font-size: 1.4rem;
	}

	.buttons {
		max-width: 50rem;
		margin: auto;
		display: grid;
		gap: 0.1rem;
		grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
	}

	.buttons a {
		margin: 0.5rem;
		cursor: pointer;
		border-radius: 1rem;
		background-blend-mode: hard-light;
		mix-blend-mode: hard-light;
		background: #ccc;
		border: none;
		box-shadow: 0 0.15rem 0.2rem #444;
		color: grey;
		transition: background 0.3s;
		text-decoration: none;
		text-align: center;
	}

	.buttons a:hover {
		background: #eee;
	}

	.buttons h2 {
		mix-blend-mode: difference;
		font-size: 1.8rem;
	}

	.buttons p {
		mix-blend-mode: difference;
		font-size: 1.2rem;
	}

	@media(max-width: 50rem) {
		.welcome {
			margin-top: 2rem;
		}
	}
</style>