---
import Base from "../layouts/Base.astro"

let title = "home";
---

<Base title={title}>
	<div class="welcome">
		<h1>welcome to my&nbsp;realm</h1>
		<p>I'm Nathan&nbsp;Patel, a <s>skilled&nbsp;gremlin</s> Computer&nbsp;Science&nbsp;undergrad</p>
	</div>
</Base>

<script defer>
	const triggerShadow = 3 * parseFloat(getComputedStyle(document.documentElement).fontSize);

	window.addEventListener("scroll", () => {
		if (window.scrollY > triggerShadow) {
			navHeader.style.boxShadow = "0 0 0.3rem black";
		} else {
			navHeader.style.boxShadow = "none";
		}
	});
</script>

<style>
	body {
		background-image: linear-gradient(90deg, #093028, #237A57);
		min-height: 100%;
		background-attachment: fixed;
		color: #eee;
	}

	.welcome {
		mix-blend-mode: hard-light;
		padding: 2rem;
		margin: 4rem auto;
		text-align: center;
		text-shadow: 0 0.15rem 0.2rem black;
		max-width: 50rem;
	}

	.welcome h1 {
		margin-top: 0;
		font-size: 4rem;
	}

	.welcome p {
		font-size: 1.4rem;
	}
</style>